{
	"comments": {
		"lineComment": "+",
		"blockComment": ["[", "]"]
	},
	"brackets": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["«", "»"],
		["‹", "›"],
		["„", "“"],
		["‚", "‘"],
		["”", "”"],
		["’", "’"],
		["‟", "”"],
		["’", "’"],
		["”", "”"]
	],
	"autoClosingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		{ "open": "\"", "close": "\"", "notIn": ["string", "comment"] },
		{ "open": "'", "close": "'", "notIn": ["string", "comment"] },
		{ "open": "¿", "close": "?", "notIn": ["string", "comment"] },
		{ "open": "¡", "close": "!", "notIn": ["string", "comment"] },
		{ "open": "«", "close": "»", "notIn": ["string", "comment"] },
		{ "open": "‹", "close": "›", "notIn": ["string", "comment"] },
		{ "open": "„", "close": "“", "notIn": ["string", "comment"] },
		{ "open": "‚", "close": "‘", "notIn": ["string", "comment"] },
		{ "open": "”", "close": "”", "notIn": ["string", "comment"] },
		{ "open": "’", "close": "’", "notIn": ["string", "comment"] },
		{ "open": "‟", "close": "”", "notIn": ["string", "comment"] },
		{ "open": "’", "close": "’", "notIn": ["string", "comment"] },
		{ "open": "”", "close": "”", "notIn": ["string", "comment"] }
	],
	"surroundingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["\"", "\""],
		["'", "'"],
		["¿", "?"],
		["¡", "!"],
		["«", "»"],
		["‹", "›"],
		["„", "“"],
		["‚", "‘"],
		["”", "”"],
		["’", "’"],
		["‟", "”"],
		["’", "’"],
		["”", "”"]
	]
